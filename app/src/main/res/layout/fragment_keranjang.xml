<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keranjangRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keranjang"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="13dp"
        android:paddingVertical="7dp"
        android:backgroundTint="@color/red_main"
        android:background="@drawable/tittle"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerKeranjang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <LinearLayout
        android:fontFamily="@font/jakartasans"
        android:id="@+id/footerTotalBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#EEEEEE">

        <TextView
            android:fontFamily="@font/jakartasans"
            android:id="@+id/totalBayar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: Rp 0"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:fontFamily="@font/jakartasans"
            android:id="@+id/btnCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:enabled="false" />
    </LinearLayout>
</LinearLayout>
